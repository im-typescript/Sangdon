{
  "compilerOptions": {
    "target": "ES5",                                  
    "module": "commonjs",                             
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true,                             
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {"*" : ["node_modules/*"] },
    "rootDir": "src",
    "outDir": "dist",
    "downlevelIteration": true,                      
  },
  "include" : ["src/**/*"]
}